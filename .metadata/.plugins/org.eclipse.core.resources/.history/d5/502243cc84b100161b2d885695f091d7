package secondaCrociera;

public class Calendario {
	Attivita[][] calendario;
	
	public Calendario(){
		this.calendario= new Attivita[8][7];
	}
	
	public int pesoAttivitaPerGiorno(int giorno){
		int value;
		for(int i=0;i< this.calendario.length;i++){
			value+=this.calendario[i][giorno].getPeso();
		}
	}
}
